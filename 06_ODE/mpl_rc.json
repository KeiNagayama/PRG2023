{
	"font": {
		"size": 14
	},
	"figure": {
		"figsize": [6,4],
		"dpi": 120
	},
	"axes": {
		"grid": true,
		"labelsize": 18 
	},
	"grid": {
		"linestyle": ":",
		"linewidth": 0.5,
		"alpha": 0.5
	},
	"xtick": {
		"direction": "in",
